{
    "version": "2.0.0",
    "tasks": [
        {
            "command": "npm",
            "taskName": "lint",
            "type": "shell",
            "suppressTaskName": true,
            "args": [ "run", "lint"],
            "problemMatcher": {
                "base": "$tslint5",
                "fileLocation": "absolute"
            }
        }
    ]
}
